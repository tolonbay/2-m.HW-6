<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="250dp"
        android:id="@+id/well_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Добро пожаловать!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Выполните вход или зарегистрируйтес"
        app:layout_constraintTop_toBottomOf="@id/well_com"
        app:layout_constraintEnd_toEndOf="@id/well_com"
        app:layout_constraintStart_toStartOf="@id/well_com"/>

    <EditText
        app:cornerRadius="12dp"
        android:id="@+id/edit_text1"
        android:background="@color/white"
        android:hint="Введите вашу почту"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/register"
        app:layout_constraintEnd_toEndOf="@id/register"
        app:layout_constraintStart_toStartOf="@id/register"
        android:layout_width="300dp"
        android:layout_height="55dp"/>
    <EditText
        android:id="@+id/edit_text2"
        android:background="@color/white"
        app:cornerRadius="12dp"
        android:hint="Введите ваш логин"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text1"
        app:layout_constraintEnd_toEndOf="@id/edit_text1"
        app:layout_constraintStart_toStartOf="@id/edit_text1"
        android:layout_width="300dp"
        android:layout_height="55dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        android:backgroundTint="#595F81"
        app:cornerRadius="12dp"
        android:textStyle="bold"
        android:text="Войти"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text2"
        app:layout_constraintEnd_toEndOf="@id/edit_text2"
        app:layout_constraintStart_toStartOf="@id/edit_text2"
        android:layout_width="300dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="2dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Забыл пароль?"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintEnd_toEndOf="@id/btn1"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>